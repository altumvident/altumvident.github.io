$(document).ready(function(){

    $(".accordion .naglowek:first").addClass("active");
    $(".accordion .tresc:not(:first)").hide();

    $(".accordion .naglowek .button").click(function(){
        $(this).parent().next(".tresc").slideToggle("slow")
            .siblings(".tresc:visible").slideUp("slow");
        $(this).parent().toggleClass("active");
        $(this).parent().siblings(".naglowek").removeClass("active");
    });

});
